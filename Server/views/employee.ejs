<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Report</title>
    <style>
        body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.header {
    display: inline-flex;
    width: max-content;
    justify-content: space-between;
    align-items: center;
    text-align: center;
    justify-items: center;
    padding: 20px;
    background-color: #3498db;
    color: #fff;
    margin-left: 20px;
}

.card {
    width: auto;
    padding: 20px;
    margin: 10px;
    background-color: #ecf0f1;
    text-align: center;
}

.table-container {
    margin: 20px;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

th, td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

th {
    background-color: #3498db;
    color: #fff;
}
h2,p{
    color: black;
}
    </style>
</head>
<body>

    <div class="header">
        <div class="card">
            <h2>Total Employees</h2>
            <p><%= totalEmployees %></p>
            <!-- Add icon if needed-->
        </div>
        <div class="card">
            <h2>Total Present</h2>
            <p>1</p>
            <!-- Add icon if needed -->
        </div>
        <div class="card">
            <h2>Total Absents</h2>
            <p>11</p>
            <!-- Add icon if needed -->
        </div>
        <div class="card">
            <h2>Total Late Entries</h2>
            <p>1</p>
            <!-- Add icon if needed --> 
        </div>
    </div>

    <div class="table-container">
        <table width="100%" cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Employee ID</th>
                    <th>Clock In</th>
                    <th>Clock Out</th>
                    <th>Early Entry</th>
                    <th>Late Entry</th>
                    <th>Early Exit</th>
                    <th>Late Exit</th>
                    <th>Duration</th>
                    <th>Attendance Status</th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach(employee => { %>
                    <tr>
                        <td><%= employee[0] %></td>
                        <td><%= employee[1] %></td>
                        <td><%= employee[2] %></td>
                        <td><%= employee[3] %></td>
                        <td><%= employee[4] %></td>
                        <td><%= employee[5] %></td>
                        <td><%= employee[6] %></td>
                        <td><%= employee[7] %></td>
                        <td><%= employee[8] %></td>
                        <td><%= employee[9] %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>

